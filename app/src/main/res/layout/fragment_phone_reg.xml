<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color">

        <com.google.android.material.appbar.MaterialToolbar
            app:titleTextColor="@color/white"
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/app_main_color"
            android:elevation="10dp"
            app:layout_collapseMode="parallax"
            app:title="@string/authorization" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5mm"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Чтобы создать аккаунт"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:fontFamily="@font/opensans_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заполните все поля ввода"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:elevation="5dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/user_photo"
                    android:layout_width="20mm"
                    android:layout_height="20mm"
                    android:layout_marginBottom="1mm"
                    android:layout_marginTop="3mm"
                    android:src="@drawable/camera"
                    android:focusable="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3mm"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/last_name">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_last_name_reg"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textCapWords"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Имя: ">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name_reg"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textCapWords"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/phone_number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_login_reg"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="phone"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/password"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password_reg"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textPassword"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email_reg"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textEmailSubject"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tv_acc_already_exists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1mm"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="У меня есть аккаунт"
                    android:textColor="@color/app_main_color"
                    android:textSize="14sp"
                    android:focusable="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reg_accept"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#471F8E"
                    android:text="Принять"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>