<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="2mm"
        android:layout_marginTop="1mm"
        android:layout_marginRight="2mm"
        android:background="#EAEAEA" />

    <LinearLayout
        android:id="@+id/ln_chosen_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1mm"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:focusable="true">

        <LinearLayout
            android:layout_width="50mm"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_icon_of_category"
                android:layout_width="4mm"
                android:layout_height="4mm"
                android:layout_marginLeft="1mm"
                android:layout_marginTop="1mm"
                android:src="@drawable/work"
                android:contentDescription="TODO" />

            <TextView
                android:fontFamily="@font/opensans_bold"
                android:id="@+id/tv_name_of_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1.5mm"
                android:layout_marginTop="0.5mm"
                android:text="Работа, Подработки"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5mm">

            <ImageView
                android:id="@+id/iv_chosen_icon"
                android:layout_width="3.7mm"
                android:layout_height="3.7mm"
                android:layout_marginTop="0.5mm"
                android:src="@drawable/ic_choosen_station"
                android:visibility="gone"
                android:contentDescription="TODO" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>