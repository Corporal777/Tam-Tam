<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_background_note_selectable"
        android:clipToOutline="true"
        android:elevation="5dp"
        android:minHeight="250dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_note_image"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_bold"
            android:maxLines="1"
            tools:text="Работа, Подработки"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/noto_sans_bold"
            android:includeFontPadding="false"
            tools:text="1800"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView

            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:lineHeight="16sp"
            android:maxLines="4"
            tools:text="Магазинге уборкага упаковкага грузчике балдар кыздар керек мед книжкаcsacascsacsacsaasvasvssavasvasvasvavavavasvasvavsavasvasvas менен"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            tools:text="Не указано"
            android:textColor="@color/item_note_date_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:maxLines="1"
            tools:text="22.01.2021"
            android:textColor="@color/item_note_date_text_color"
            android:textSize="11.5sp" />

    </LinearLayout>
</layout>
