<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/main_toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/app_main_color"
            android:elevation="10dp"
            app:layout_collapseMode="parallax"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_back"
                android:contentDescription="TODO"
                android:focusable="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5mm"
                android:text="Добавить"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5mm"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_choose_category"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview_border"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:hint="    Категория:"
                    android:textColor="@color/app_main_color"
                    android:textColorHint="@color/color_of_text_fragment_new_ad"
                    android:textSize="16sp"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tv_choose_metro"
                    android:layout_width="360dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1mm"
                    android:background="@drawable/textview_border"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:hint="    Станция метро:"
                    android:textColor="@color/app_main_color"
                    android:textColorHint="@color/color_of_text_fragment_new_ad"
                    android:textSize="16sp"
                    android:focusable="true" />

                <com.google.android.material.textfield.TextInputLayout
                    app:endIconMode="clear_text"
                    app:endIconDrawable="@drawable/ic_clear"
                    android:id="@+id/til_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/text_of_work">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/work_text"
                        android:layout_width="360dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textMultiLine"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/title"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/work_title"
                        android:layout_width="360dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="textCapSentences"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    app:endIconMode="clear_text"
                    android:id="@+id/filledTextField"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/salary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/work_salary"
                        android:layout_width="360dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="number"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    app:endIconMode="clear_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/phone_number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/work_phone_number"
                        android:layout_width="360dp"
                        android:layout_height="60dp"
                        android:backgroundTint="@color/app_main_color"
                        android:inputType="phone"
                        android:textColor="@color/app_main_color"
                        android:textColorHint="@color/app_main_color" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35mm"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1mm"
                    android:clickable="true"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iv_photo_of_work"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:scaleType="centerCrop"
                        android:src="@drawable/without_photo"
                        android:contentDescription="TODO"
                        android:focusable="true" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ln_of_other_images"
                    android:layout_width="10mm"
                    android:layout_height="30mm"
                    android:layout_marginLeft="1mm"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1mm"
                        android:layout_marginTop="3mm"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iv_second_image"
                            android:layout_width="8mm"
                            android:layout_height="8mm"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/without_photo"
                            android:contentDescription="TODO"
                            android:focusable="true" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1mm"
                        android:layout_marginTop="1mm"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iv_third_image"
                            android:layout_width="8mm"
                            android:layout_height="8mm"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/without_photo"
                            android:contentDescription="TODO"
                            android:focusable="true" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1mm"
                        android:layout_marginTop="1mm"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iv_fourth_image"
                            android:layout_width="8mm"
                            android:layout_height="8mm"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:scaleType="centerCrop"
                            android:src="@drawable/without_photo"
                            android:contentDescription="TODO"
                            android:focusable="true" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_new_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_back_shadow"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/publicate"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>