<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color"
        android:elevation="10dp"
        app:elevation="10dp">

        <include layout="@layout/custom_toolbar_back"/>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="0.5mm"
                    android:layout_width="match_parent"
                    android:layout_height="12mm">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_search"
                        style="@style/MyCardViewStyle"
                        android:layout_width="45mm"
                        android:layout_height="8mm"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="5dp"
                        android:focusable="true">


                        <EditText
                            android:imeOptions="actionSearch"
                            android:id="@+id/et_search_beauty"
                            android:layout_width="45mm"
                            android:layout_height="8mm"
                            android:layout_marginLeft="1mm"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@color/app_main_color"
                            android:drawableLeft="@drawable/ic_search"
                            android:hint="  Поиск"
                            android:inputType="textCapWords"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_color" />


                        <ImageView
                            android:id="@+id/iv_clear"
                            android:layout_width="3mm"
                            android:layout_height="3mm"
                            android:layout_gravity="right"
                            android:layout_marginTop="2.5mm"
                            android:layout_marginRight="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:src="@drawable/ic_clear"
                            android:contentDescription="TODO"
                            android:focusable="true" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_metro"
                        style="@style/MyCardViewStyle"
                        android:layout_width="8mm"
                        android:layout_height="8mm"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="4dp"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="5mm"
                            android:layout_height="5mm"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:src="@drawable/metro"
                            android:contentDescription="TODO" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="10mm">

                    <ScrollView
                        android:id="@+id/nestedScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10mm">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_beauty_first"
                                android:layout_width="23mm"
                                android:layout_height="7mm"
                                android:layout_marginLeft="2mm"
                                android:layout_marginTop="0.7mm"
                                android:layout_marginBottom="1mm"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="6dp"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/first_cat"
                                    android:contentDescription="TODO" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/polyclinic"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_beauty_second"
                                android:layout_width="23mm"
                                android:layout_height="7mm"
                                android:layout_marginLeft="2mm"
                                android:layout_marginTop="0.7mm"
                                android:layout_marginBottom="1mm"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="6dp"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/first_cat"
                                    android:contentDescription="TODO" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/dentistry"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_beauty_third"
                                android:layout_width="23mm"
                                android:layout_height="7mm"
                                android:layout_marginLeft="2mm"
                                android:layout_marginTop="0.7mm"
                                android:layout_marginBottom="1mm"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="6dp"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/first_cat"
                                    android:contentDescription="TODO" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/Beauty_saloon"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_marginRight="2mm"
                                android:id="@+id/card_beauty_fourth"
                                android:layout_width="18mm"
                                android:layout_height="7mm"
                                android:layout_marginLeft="2mm"
                                android:layout_marginTop="0.7mm"
                                android:layout_marginBottom="1mm"
                                android:clickable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="6dp"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/first_cat"
                                    android:contentDescription="TODO" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Маникюр"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </ScrollView>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@style/CircularProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="#411E80" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginRight="0.6mm"
                    android:layout_marginLeft="0.5mm"
                    android:id="@+id/rv_beauty_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1mm" />

            </RelativeLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>