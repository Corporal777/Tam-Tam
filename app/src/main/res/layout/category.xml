<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_work"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_work"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_transport"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_transport"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_medicine"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_medicine"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_flats"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_flats"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_buy"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_buy"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/case_study"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_height="130dp"
        android:background="@drawable/case_study"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

</LinearLayout>
