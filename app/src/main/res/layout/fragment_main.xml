<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:elevation="10dp">

        <com.google.android.material.appbar.MaterialToolbar
            ads:titleTextColor="@color/white"
            ads:title="@string/app_main_name"
            ads:layout_scrollFlags="scroll"
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/app_main_color">

            <ImageView
                android:layout_marginRight="3mm"
                android:id="@+id/iv_enter"
                android:layout_width="4mm"
                android:layout_height="4mm"
                android:layout_gravity="right"
                android:layout_marginLeft="28mm"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_enter"
                android:contentDescription="TODO"
                android:focusable="true" />

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1mm"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1mm"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/choose_category"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="25mm"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <ScrollView
                    android:id="@+id/nestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24mm">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_work"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="3mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="6mm"
                                android:layout_height="6mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4mm"
                                android:clickable="false"
                                android:src="@drawable/case_work"
                                android:contentDescription="TODO" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="@string/full_time_work"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="@string/short_time_work"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_transport"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="2mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="6mm"
                                android:layout_height="6mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4mm"
                                android:clickable="false"
                                android:src="@drawable/transport"
                                android:contentDescription="TODO" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="@string/transport"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="@string/transportation"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_medicine"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="2mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="6mm"
                                android:layout_height="6mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="4mm"
                                android:clickable="false"
                                android:src="@drawable/medicine"
                                android:contentDescription="TODO" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="@string/Medicine"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="@string/Beauty"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_buy_sell"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="2mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="7.2mm"
                                android:layout_height="7.2mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="3.5mm"
                                android:clickable="false"
                                android:src="@drawable/buy_sell"
                                android:contentDescription="TODO" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="@string/buy"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="@string/sell"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_flats"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="2mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="6mm"
                                android:layout_height="6mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="3.7mm"
                                android:clickable="false"
                                android:src="@drawable/house_icon"
                                android:contentDescription="TODO" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="Квартиры"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="Гостиницы"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_services"
                            android:layout_width="20mm"
                            android:layout_height="21mm"
                            android:layout_marginLeft="2mm"
                            android:layout_marginTop="0.7mm"
                            android:layout_marginRight="3mm"
                            android:layout_marginBottom="1mm"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/first_cat"
                                android:contentDescription="TODO" />

                            <ImageView
                                android:layout_width="6mm"
                                android:layout_height="6mm"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="3.5mm"
                                android:clickable="false"
                                android:src="@drawable/icon_study"
                                android:contentDescription="TODO" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="11mm"
                                android:clickable="false"
                                android:text="Обучение"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="14mm"
                                android:clickable="false"
                                android:text="Услуги"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </ScrollView>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1mm"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Недавние объявления:"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@style/CircularProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="#411E80" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginRight="0.6mm"
                    android:layout_marginLeft="0.5mm"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10mm" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        app:hideOnScroll="true"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_bottom_navigation"
        app:fabAlignmentMode="end">

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        ads:layout_anchor="@id/bottomBar"
        app:tint="@color/white"
        app:backgroundTint="@color/fab_color"
        android:id="@+id/btn_add_ads"
        app:srcCompat="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>