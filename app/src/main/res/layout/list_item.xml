<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="51mm">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="30mm"
        android:layout_height="match_parent"
        android:layout_marginLeft="1mm"
        android:layout_marginTop="1mm"
        android:layout_marginBottom="1mm"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_work_image"
                android:layout_width="match_parent"
                android:layout_height="23mm"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:contentDescription="TODO"
                android:focusable="true" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1mm"
                android:text="Работа, Подработки"
                android:textColor="@color/app_main_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1mm"
                    android:text="1800"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_currency"
                    android:layout_width="1.4mm"
                    android:layout_height="1.4mm"
                    android:layout_marginLeft="0.7mm"
                    android:layout_marginTop="1.2mm"
                    android:src="@drawable/ic_ruble_currency_sign"
                    android:contentDescription="TODO" />
            </LinearLayout>

            <TextView
                android:layout_marginRight="0.3mm"
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1mm"
                android:text="Магазинге уборкага упаковкага грузчике балдар кыздар керек мед книжка менен"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="3.3mm"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5mm">

            <ImageView
                android:layout_width="2.5mm"
                android:layout_height="2.5mm"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="0.4mm"
                android:src="@drawable/ic_location"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1mm"
                android:text="м. Кантемировская"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_marginBottom="0.4mm"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="1mm"
            android:text="22.01.2021"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
</LinearLayout>